{
    "name": "page-active",
    "version": "1.0.0",
    "description": "Check and listen to all page visibility changes.",
    "keywords": [
        "page",
        "window",
        "focus",
        "blur",
        "active",
        "inactive",
        "visibility"
    ],
    "homepage": "https://github.com/electrovir/page-active",
    "bugs": {
        "url": "https://github.com/electrovir/page-active/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/electrovir/page-active.git"
    },
    "license": "(MIT or CC0 1.0)",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "virmator frontend build",
        "compile": "virmator compile",
        "docs": "virmator docs",
        "format": "virmator format",
        "preview": "virmator frontend preview",
        "publish": "virmator publish \"npm run compile && npm run test:all\"",
        "start": "virmator frontend",
        "test:all": "concurrently --colors --kill-others-on-fail -c auto --names types,spelling,format,docs,deps \"npm run test:types\" \"npm run test:spelling\" \"npm run test:format\" \"npm run test:docs\" \"npm run test:deps\"",
        "test:deps": "virmator deps check",
        "test:docs": "virmator docs check",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "tsc --noEmit"
    },
    "dependencies": {
        "observavir": "^2.0.0",
        "run-time-assertions": "^1.2.0"
    },
    "devDependencies": {
        "@augment-vir/node-js": "^26.4.0",
        "cspell": "^8.7.0",
        "dependency-cruiser": "^16.3.1",
        "esbuild": "^0.20.2",
        "markdown-code-example-inserter": "^1.0.0",
        "npm-check-updates": "~16.12.3",
        "prettier": "^3.2.5",
        "prettier-plugin-interpolated-html-tags": "^1.0.5",
        "prettier-plugin-jsdoc": "^1.3.0",
        "prettier-plugin-multiline-arrays": "^3.0.4",
        "prettier-plugin-organize-imports": "^3.2.4",
        "prettier-plugin-packagejson": "^2.5.0",
        "prettier-plugin-sort-json": "^4.0.0",
        "prettier-plugin-toml": "^2.0.1",
        "typedoc": "^0.25.13",
        "typescript": "^5.3.3",
        "virmator": "^11.5.2",
        "vite": "^4.5.3",
        "vite-tsconfig-paths": "^4.3.2"
    }
}
